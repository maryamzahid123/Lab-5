ADD TWO NUMBERS
using System;

class Program
{
    static void Main()
    {
        Console.Write("Enter first number: ");
        double num1 = Convert.ToDouble(Console.ReadLine());

        Console.Write("Enter second number: ");
        double num2 = Convert.ToDouble(Console.ReadLine());

        Console.WriteLine("Enter Third Number: ");
        double num3 = Convert.ToDouble(Console.WriteLine());

        double sum = num1 + num2 + num3;

        Console.WriteLine($"The sum of {num1} and {num2} is {sum}");
    }
}
SUBTRACT TWO NUMBERS
using System;

class Program
{
    static void Main()
    {
        Console.Write("Enter first number: ");
        double num1 = Convert.ToDouble(Console.ReadLine());

        Console.Write("Enter second number: ");
        double num2 = Convert.ToDouble(Console.ReadLine());

         Console.WriteLine("Enter Third Number: ");
        double num3 = Convert.ToDouble(Console.WriteLine());

        double difference = num1 - num2 - num3;

        Console.WriteLine($"The difference between {num1} and {num2} is {difference}");
    }
}
MULTIPLY TWO NUMBERS
using System;

class Program
{
    static void Main()
    {
        Console.Write("Enter first number: ");
        double num1 = Convert.ToDouble(Console.ReadLine());

        Console.Write("Enter second number: ");
        double num2 = Convert.ToDouble(Console.ReadLine());

         Console.WriteLine("Enter Third Number: ");
        double num3 = Convert.ToDouble(Console.WriteLine());


        double product = num1 * num2 * num3;

        Console.WriteLine($"The product of {num1} and {num2} is {product}");
    }
}
DIVIDE TWO NUMBERS
using System;

class Program
{
    static void Main()
    {
        Console.Write("Enter first number: ");
        double num1 = Convert.ToDouble(Console.ReadLine());

        Console.Write("Enter second number: ");
        double num2 = Convert.ToDouble(Console.ReadLine());

        if (num2 != 0)
        {
            double quotient = num1 / num2;
            Console.WriteLine($"The quotient of {num1} divided by {num2} is {quotient}");
        }
        else
        {
            Console.WriteLine("Division by zero is not allowed.");
        }
    }
}
